<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailJenisAlpukatActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_24"/>
        <TextView
            android:id="@+id/bar_jenis_alpukat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail Jenis Alpukat"
            android:fontFamily="@font/baloo2_medium"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toEndOf="@+id/iv_back"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/action_bar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="100dp">
            <ImageView
                android:id="@+id/iv_detail_jenis_alpukat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tv_title_jenis_alpukat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Alpukat"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:fontFamily="@font/baloo2_bold"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_detail_jenis_alpukat"/>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tv_deskripsi_satu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi 1"
                android:textSize="14sp"
                android:fontFamily="@font/baloo2_medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_jenis_alpukat"/>
            <com.codesgood.views.JustifiedTextView
                android:id="@+id/tv_deskripsi_dua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deskripsi 1"
                android:textSize="14sp"
                android:fontFamily="@font/baloo2_medium"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_satu"/>

            <TextView
                android:id="@+id/tv_title_manfaat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Manfaat"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:fontFamily="@font/baloo2_bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_deskripsi_dua"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_manfaat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="129dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo2_semibold"
                        android:text="Sumber lemak sehat dan serat"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/tv_sumber_lemak_sehat_serat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="TESTING 1"
                        android:fontFamily="@font/baloo2_medium"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Kaya akan nutrisi"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/tv_kaya_akan_nutrisi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="TESTING 2"
                        android:fontFamily="@font/baloo2_medium"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Tinggi serat"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/tv_tinggi_serat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="TESTING 3"
                        android:fontFamily="@font/baloo2_medium"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Antioksidan"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/tv_antiokesida"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="TESTING 4"
                        android:fontFamily="@font/baloo2_medium"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="Manfaat untuk Kulit"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:text=":"
                        android:textColor="@color/black"
                        android:fontFamily="@font/baloo2_semibold"/>
                    <com.codesgood.views.JustifiedTextView
                        android:id="@+id/tv_manfaat_kulit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="TESTING 5"
                        android:fontFamily="@font/baloo2_medium"/>
                </TableRow>
            </TableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>